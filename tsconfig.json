{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
  },
}
